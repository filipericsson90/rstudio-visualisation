library("flextable")
library("tableone")

table1 <- # a table one object

table2 <- table1 %>%
  as.data.frame() %>%
  rownames_to_column("Variables")%>% 
  flextable() %>%
  autofit(add_w = 0.2) %>%
  align(align = "left") %>%
  align(align = "left", part = "header") %>% 
  add_header_lines("Table x: header-here") %>%
  add_footer_lines("footer-here")
